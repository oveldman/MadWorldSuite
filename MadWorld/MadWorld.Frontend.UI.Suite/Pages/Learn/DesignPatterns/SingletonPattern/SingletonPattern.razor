@page "/Learn/DesignPatterns/SingletonPattern"

<div class="row">
    <div class="col-2">
        <button class="btn btn-success" @onclick="GetRaceId">Get next race id</button>
    </div>
    <div class="col-2">
        <button class="btn btn-warning" @onclick="ResetRaceId">Reset race id</button>
    </div>
</div>
<div>
    <div class="col-4">
        <div class="card" style="width: 30rem;">
            <div class="card-body">
                <h5 class="card-title">Next race</h5>
                <p class="card-text">Id: @RaceId</p>
            </div>
        </div>
    </div>   
</div>