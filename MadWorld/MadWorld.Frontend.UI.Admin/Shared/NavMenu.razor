@using MadWorld.Shared.Contracts.Shared.Authorization
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <img id="nav-logo" src="image/RieMasudaIconSmall.png" alt="www.Mad-World.nl"/> 
            Mad World Admin
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Roles="@nameof(RoleTypes.Admin)">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Accounts">
                    <span class="oi oi-key" aria-hidden="true"></span> Account
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Blogs">
                    <span class="oi oi-paperclip" aria-hidden="true"></span> Blogs
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/CurriculumVitae">
                    <span class="oi oi-clipboard" aria-hidden="true"></span> Curriculum Vitae
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}